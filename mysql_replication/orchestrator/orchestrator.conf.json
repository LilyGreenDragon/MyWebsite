{
  "Debug": true,
  "ListenAddress": ":3000",
  "HTTPAuthUser": "admin",
  "HTTPAuthPassword": "admin",
  "HostnameResolveMethod": "none",
  "UseSuperReadOnly": true,
  "Unresolve": true,
  "MySQLHostnameResolve": false,
  "DetectReplicationLagQuery": "select 0",
  "MySQLHostnameResolveMethod": "report_host",
  "RaftEnabled": false,

  "MySQLTopologyUser": "orchestrator",
  "MySQLTopologyPassword": "orchestrator_pass",
  "MySQLTopologyHost": "mysql-master",
  "MySQLTopologyPort": 3306,

  "BackendDB": "mysql",
  "MySQLOrchestratorHost": "orchestrator_db",
  "MySQLOrchestratorPort": 3306,
  "MySQLOrchestratorDatabase": "orchestrator",
  "MySQLOrchestratorUser": "orchestrator",
  "MySQLOrchestratorPassword": "orchestrator_pass",

  "DiscoverByShowSlaveHosts": true,
  "InstancePollSeconds": 5,

  "EnableMasterFailover": true,
  "RecoveryPeriodBlockSeconds": 5,
  "RecoverMasterClusterFilters": ["*"],

  "Recovery": {
    "AutoMasterFailover": true,
    "MasterFailoverDetachReplicaMasterHost": true,
    "ApplyMySQLPromotionAfterMasterFailover": true,
    "DetachLostSlavesAfterMasterFailover": true,
    "FailMasterPromotionOnLagMinutes": 1,
    "DelayMasterPromotionIfSQLThreadNotUpToDate": false
  },

  "PromotionIgnoreHostnameFilters": [
    "^[0-9a-f]{12}$"
  ],

  "PreFailoverProcesses": [
    "/usr/local/orchestrator/pre_failover.sh"
  ],
  "PostFailoverProcesses": [
    "/usr/local/orchestrator/post_failover.sh"
  ],


  "DiscoverySeeds": [
    "mysql-master:3306",
    "mysql-slave1:3306",
    "mysql-slave2:3306"
  ]
}