datadir="/var/lib/proxysql"

admin_variables=
{
    admin_credentials="admin:admin"
    mysql_ifaces="0.0.0.0:6032"
}

mysql_variables=
{
    threads=4
    max_connections=2048
    default_query_delay=0
    default_query_timeout=36000000
    poll_timeout=2000
    interfaces="0.0.0.0:6033"

    # мониторинг серверов
    monitor_username="monitor"
    monitor_password="monitor_pass"
    monitor_history=600000
    monitor_connect_interval=2000
    monitor_ping_interval=10000
    monitor_read_only_interval=1500

    monitor_writer_is_also_reader=0

    # SSL клиент
    mysql-client_ssl_cert="/etc/mysql/certs/client-cert.pem"
    mysql-client_ssl_key="/etc/mysql/certs/client-key.pem"
    mysql-client_ssl_ca="/etc/mysql/certs/ca.pem"
}

mysql_servers =
(
    { address="mysql-master", port=3306, hostgroup=10, max_connections=200, max_latency_ms=1000, use_ssl=1 },
    { address="mysql-slave",  port=3306, hostgroup=20, max_connections=200, max_latency_ms=1000, use_ssl=1 }
)

mysql_users =
(
    { username = "root", password = "14789", default_hostgroup = 10, active = 1, use_ssl=1 },
    { username = "monitor", password = "monitor_pass", default_hostgroup = 10, active = 0, use_ssl=1 }
)

mysql_replication_hostgroups =
(
    { writer_hostgroup=10, reader_hostgroup=20, check_type="read_only" }
)
